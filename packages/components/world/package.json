{
  "name": "@mineral-ui/world",
  "version": "0.0.0",
  "description": "World component",
  "license": "UNLICENSED",
  "main": "dist/umd/index.js",
  "module": "dist/es/index.js",
  "scripts": {
    "build": "npm run clean && npm run build:dist",
    "build:analyze": "ANALYZE=true npm run build:umd",
    "build:dist": "npm run build:umd && npm run build:es",
    "build:es": "babel src --out-dir dist/es --ignore *.spec.js --source-maps",
    "build:prod": "NODE_ENV=production npm run build",
    "build:umd": "webpack",
    "clean": "rimraf dist/*",
    "commit": "npm run commit --prefix=../../../",
    "eslint": "eslint --ignore-path ../../../.eslintignore .",
    "lint": "npm run eslint",
    "pack-ls": "npm pack && tar -tzvf mineral-ui-world*.tgz && rm mineral-ui-world*.tgz",
    "start": "TARGET=demo webpack-dev-server --progress",
    "test": "npm run lint && jest --config=../../../.jestrc",
    "test:coverage": "npm run test -- --coverage"
  },
  "devDependencies": {
    "babel-cli": "6.24.0",
    "eslint": "3.18.0",
    "jest": "19.0.2",
    "rimraf": "2.6.1",
    "webpack": "2.3.3",
    "webpack-dev-server": "2.4.2"
  },
  "peerDependencies": {
    "react": "^15",
    "react-dom": "^15"
  },
  "publishConfig": {
    "access": "public"
  }
}
