{
  "name": "@mineral-ui/site",
  "version": "0.1.0",
  "description": "Site",
  "license": "Apache-2.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run clean && NODE_ENV=production npm run build:umd",
    "build:analyze": "ANALYZE=true npm run build",
    "build:umd": "TARGET=site webpack",
    "clean": "rimraf dist/*",
    "commit": "git-cz",
    "eslint": "eslint --ignore-path ../../.eslintignore .",
    "jest": "jest --config=../../.jestrc",
    "lint": "npm run eslint",
    "pack-ls": "tar -tvf $(npm pack) && rm mineral-ui-*.tgz",
    "start": "TARGET=site webpack-dev-server --progress",
    "test": "npm run lint && npm run jest -- --coverage"
  },
  "devDependencies": {
    "@mineral-ui/hello": "^0.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
