{
  "name": "@mineral-ui/archetype",
  "version": "0.1.0",
  "description": "Archetype component",
  "license": "Apache-2.0",
  "private": true,
  "main": "dist/umd/index.js",
  "module": "dist/es/index.js",
  "scripts": {
    "build": "npm run clean && NODE_ENV=production npm run build:umd && NODE_ENV=production npm run build:es",
    "build:analyze": "ANALYZE=true npm run build",
    "build:es": "babel src --out-dir dist/es --ignore *.spec.js --source-maps --minified",
    "build:umd": "webpack",
    "clean": "rimraf dist/*",
    "commit": "git-cz",
    "eslint": "eslint --ignore-path ../../.eslintignore .",
    "jest": "jest --config=../../.jestrc",
    "lint": "npm run eslint",
    "pack-ls": "tar -tvf $(npm pack) && rm mineral-ui-*.tgz",
    "start": "TARGET=demo webpack-dev-server --progress",
    "test": "npm run lint && npm run jest -- --coverage"
  },
  "peerDependencies": {
    "react": "^15",
    "react-dom": "^15"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
