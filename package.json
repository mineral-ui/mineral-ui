{
  "name": "@mineral-ui/mineral-ui",
  "description": "Mineral UI component library",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap && npm run link-parent-bin",
    "build": "npm run clean && npm run bootstrap && lerna run build && npm run flow:restart",
    "clean": "find packages -name dist -or -name node_modules -type d | xargs rm -rf",
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg",
    "deploy:site": "npm run build && npm run test && npm run deploy:site:dist",
    "deploy:site:dist": "gh-pages -d packages/site/dist -m 'chore(site): Deploy' -r https://github.com/mineral-ui/mineral-ui.github.io.git -b master",
    "eslint": "eslint .",
    "flow": "flow",
    "flow:restart": "npm run flow -- stop; npm run flow",
    "format": "node ./scripts/format.js && eslint --fix .",
    "jest": "jest",
    "lerna": "lerna",
    "link-parent-bin": "link-parent-bin -c packages",
    "lint": "npm run eslint",
    "pack-ls": "lerna run pack-ls",
    "release:manual": "npm run build && npm run test && lerna publish --message='chore(publish): Publish'",
    "release:semantic": "npm run release:manual -- --conventional-commits && npm run deploy:site:dist",
    "start": "lerna exec --scope @mineral-ui/site -- npm start",
    "test": "npm run lint && npm run flow && npm run jest -- --coverage"
  },
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-core": "6.25.0",
    "babel-eslint": "7.2.3",
    "babel-jest": "20.0.3",
    "babel-loader": "7.1.0",
    "babel-plugin-flow-react-proptypes": "3.2.1",
    "babel-plugin-module-resolver": "3.0.0-beta.0",
    "babel-plugin-polished": "1.1.0",
    "babel-plugin-syntax-dynamic-import": "6.18.0",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "6.24.1",
    "babel-plugin-transform-object-rest-spread": "6.23.0",
    "babel-plugin-transform-react-constant-elements": "6.23.0",
    "babel-plugin-transform-react-inline-elements": "6.22.0",
    "babel-polyfill": "6.23.0",
    "babel-preset-env": "1.5.2",
    "babel-preset-flow": "6.23.0",
    "babel-preset-react": "6.24.1",
    "commitizen": "2.9.6",
    "conventional-commit-types": "2.1.0",
    "copy-webpack-plugin": "4.0.1",
    "cz-conventional-changelog": "2.0.0",
    "enzyme": "2.8.2",
    "enzyme-to-json": "1.5.1",
    "eslint": "3.19.0",
    "eslint-config-prettier": "2.2.0",
    "eslint-plugin-flowtype": "2.34.0",
    "eslint-plugin-jsx-a11y": "5.0.3",
    "eslint-plugin-prettier": "2.1.1",
    "eslint-plugin-react": "7.0.1",
    "flow-bin": "0.47.0",
    "flow-copy-source": "1.1.0",
    "flow-typed": "2.1.2",
    "fs-extra": "3.0.1",
    "gh-pages": "1.0.0",
    "glamor": "2.20.25",
    "glamorous": "3.23.3",
    "glob": "7.1.2",
    "html-webpack-plugin": "2.28.0",
    "husky": "0.13.4",
    "jest": "20.0.4",
    "jest-glamor-react": "1.4.0",
    "lerna": "2.0.0-rc.5",
    "link-parent-bin": "0.1.2",
    "lodash.camelcase": "4.3.0",
    "lodash.flatten": "4.4.0",
    "lodash.upperfirst": "4.3.1",
    "material-design-icons": "3.0.1",
    "mustache": "2.3.0",
    "polished": "1.3.0",
    "prepend-file": "1.3.1",
    "prettier": "1.4.4",
    "pretty-bytes": "4.0.2",
    "prop-types": "15.5.10",
    "react": "15.6.1",
    "react-addons-test-utils": "15.6.0",
    "react-docgen": "3.0.0-beta4",
    "react-docgen-loader": "2.9.1",
    "react-dom": "15.6.1",
    "react-live": "1.7.0",
    "react-router-dom": "4.1.1",
    "rimraf": "2.6.1",
    "string-replace-loader": "1.2.0",
    "svgo": "0.7.2",
    "validate-commit-msg": "2.12.2",
    "webpack": "3.0.0",
    "webpack-bundle-analyzer": "2.8.2",
    "webpack-dev-server": "2.5.0",
    "webpack-merge": "4.1.0"
  },
  "peerDependencies": {
    "glamor": "^2.0.0",
    "glamorous": "^3.0.0",
    "react": "^15.0.0",
    "react-dom": "^15.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
